/* 全局 */

.clearfix {
	zoom:1;
}
.clearfix:before,.clearfix:after {
	content:" ";
	display:table;
}
.clearfix:after {
	clear:both;
}
a {
	color:#333;
	text-decoration:none;
	outline:none;
}
a:hover,a:active {
	color:#C10D0C;
}
a:focus {
	outline:none;
}
img {
	border:0;
}
@font-face {
	font-family:'Electrolize';
	font-style:normal;
	font-weight:400;
	src:local('Electrolize'),local('Electrolize-Regular'),url(http://rainy.qiniudn.com/Electrolize.woff) format('woff');
}
/* 全局结束 */

/* 内容区markdown */
.post-content {
	line-height:150%;
	margin:10px 0;
	p {
	margin:1em 0;
	letter-spacing:1px;
}

h1 {
	font-size:26px;
  margin: 1em 0;
}

h3 {
		font-size: 22px;
		margin: 1em 0;
	}

	h4 {
		font-size: 20px;
		margin: .5em 0;
	}

	h5 {
		font-size: 18px;
		margin: .5em 0;
	}
	h6 {
		font-size: 16px;
		margin: .5em 0;
	}

	figure {
	margin: 0;
}

 a {
	color:#C10D0C;
}
blockquote {
	margin:1em 0;
	margin-left:1.5em;
	padding-left:1em;
	border-left:1px solid #C10D0C;
}
 ul {
	padding:.5em 2em!important;
	list-style-type: square;
}
 ol {
	padding:.5em 2em!important;
}
 dt {
	font-weight: bold;
}
pre,code {
	padding:2px 4px;
	background:#F3F3F0;
	font-family:Menlo,Monaco,Consolas,"Lucida Console","Courier New",monospace;
	font-size:.92857em;
}
code {
	color:#B94A48;
}
pre {
	padding:8px;
	overflow:auto;
	max-height:300px;
}
pre code {
	color:#444;
}

img {
	max-width:618px;
	border:1px solid rgb(224,224,224);
	padding:2px;
}
img:hover {
	border-color:#C10D0C;
}
}

#wrapper .post-content h2 {
	display:block;
	font-size:24px;
	margin: 1em 0;
}




/* 内容区结束 */

/* 结构 */
body {
	color:#333;
	background:#F1F1F1;
	font:normal 14px "TIBch","Classic Grotesque W01","Helvetica Neue",Arial,"Hiragino Sans GB","STHeiti","Microsoft YaHei","WenQuanYi Micro Hei",SimSun,sans-serif;
	-webkit-font-smoothing:antialiased;
}
#wrapper {
	width:670px;
	margin:80px auto;
	padding:0;
	border:1px solid #DDD;
	background:#FFF;
	overflow:hidden;
}
#header {
	padding:40px 20px 0;
	text-shadow:1px 1px 5px #D3D3D3;
}
#logo {
	font:normal 30px 'Electrolize',Verdana;
}
#logo:hover {
	color:#C10D0C;
}
.description {
	font-size:14px;
	line-height:28px;
	margin:5px 0;
}
#nav-menu {
	width:100%;
	height:38px;
	border-bottom:1px solid #E0E0E0;
	float:left;
}
#nav-menu ul,#nav-menu li {
	list-style:none;
	float:left;
}
#nav-menu a {
	color:#333;
	display:block;
	height:16px;
	margin-right:30px;
	padding:10px;
	font-size:14px;
}
#nav-menu a:hover,#nav-menu a.current {
	border-bottom:2px solid #FF0000;
}
#search {
	float:right;
	padding-top:18px;
}
#search input {
	width:80px;
	height:20px;
	padding:0;
	border:0;
	border-bottom:2px solid #FFFFFF;
	outline:none;
	color:#4B4B4B;
}
#search input:focus {
	border-bottom-color:#FF0000;
	width:130px;
}
#main {
	margin-top:20px;
	padding:0 20px;
}
#main h2.archive-title {
	display:block;
}
#main h2.post-title {
	display:block;
}
.post {
	width: 629px;
	padding-bottom:10px;
	border-left:1px solid #DDD;
	font-size:14px;
	line-height:140%;
}
.post a {
	color:#333;
}
.post:hover {
	color:#222;
	border-color:#FF0000;
}
.post:hover a {
	color:#222;
}
.post h3 {
	color:#C10D0C;
	display:block;
	padding:3px 0 3px 8px;
	border-bottom:1px solid #DDD;
	font-size:16px;
	font-weight:normal;
}
.post:hover h3:first-child {
	border-color:#FF0000;
}
.post-meta {
	color:rgb(0,0,0);
	list-style:none;
	border-bottom:1px #ccc dotted;
}
.post-meta li {
	display:inline-block;
	margin:5px 20px 5px 0;
}
.pocontent {
	margin-top:5px;
	padding-left:8px;

	figure.highlight {
		margin-left: 0;
	}
}

.page-navigator {
	color:#666;
	margin-top:20px;
	border-top:1px solid #E0E0E0;
	list-style:none;
	font-size:16px;
}
.page-navigator li {
	display:inline-block;
	margin:0 5px 5px 0;
}
.page-navigator .current a {
	color:#444;
	border-top-color:#FF0000;
}
.page-navigator a {
	display:inline-block;
	height:20px;
	border-top:2px solid #FFFFFF;
	padding:5px 9px;
	line-height:20px;
}
.page-navigator a:hover {
	border-color:#FF0000;
}
#footer {
	position:relative;
	padding:20px 0 15px;
	text-shadow:1px 1px 5px #D3D3D3;
}
.container {
	margin:0;
	padding:0 20px;
}
#toTop {
	bottom:5px;
	right:5px;
	font:normal 30px 'Electrolize',Verdana;
	position:absolute;
}
/* 结构结束 */

/* 评论区域 */
#comments {
	margin-top:5px;
	border-top:1px dotted #ccc;
}
#comments h4 {
	margin:5px 0;
	font-size:18px;
}
#comments ol {
	list-style:none;
}
.comment-author {
	position:relative;
	width:250px;
	height:27px;
	float:left;
}
.comment-author .avatar {
	width:22px;
	height:22px;
	padding:2px;
	border:1px solid rgb(190,190,190);
	border-bottom:none;
}
.comment-meta {
	height:16px;
	padding:2px;
	margin-top:6px;
	float:right;
	border:1px solid #ddd;
	border-bottom:none;
}
.fn {
	font-size:16px;
	font-style:normal;
	position:absolute;
	top:6px;
	left:35px;
}
.fn a {
	color:#C10D0C;
}
.cancel-comment-reply {
	height:16px;
	padding:5px 0 2px 0;
}
.comment-content {
	clear:both;
	margin-bottom:8px;
	padding:8px 10px;
	border:1px solid #DDD;
}
.comment-children {
	padding-left:30px;
	border-left:1px solid #F7F7F7;
}
#comment-form {
	margin-top:10px;
}
input[type="text"], input[type="email"], input[type="url"], input[type="password"] {
	padding: 5px;
	border: 1px solid #DDD;
	width: 100%;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
}
#comment-form label {
	display: block;
	margin: 5px 0 2px;
	font-weight: bold;
}
#comment-form .required:after {
content: " *";
color: #C00;
}
.submit {
	width:100%;
	height:28px;
	margin-bottom:5px;
	border:none;
	background:#0090C9;
	color:white;
	cursor:pointer;
	font-size:16px;
}
.submit:active {
	background:#006992;
}
#comment-form textarea {
	width:100%;
	height:100px;
	border:none;
	outline:0;
	background:transparent;
	font:normal 12px "微软雅黑";
	line-height:22px;
	color:rgba(0,0,0,1);
	resize:none;
	overflow:auto;
	vertical-align:bottom;
}
#comment-form .comment-area {
	margin-top:10px;
	padding:7px;
	border:1px solid #DDD;
}	
/* 评论区域结束 */

