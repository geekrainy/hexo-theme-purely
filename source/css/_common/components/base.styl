	text-align:center;
	padding:10px;
	border-bottom:2px solid #FF0000;
	background:#FFF;
	font-size:20px;
	color:#FF0000;
}
.error-page p {
	font-size:40px;
	font-weight:bold;
	text-align:center;
}
.error-page em {
	font-style:normal;
	font-size:180px;
}
#about {
	text-align:center;
	padding:10px 10px 0;
	letter-spacing:1px;
}
#about a {
	color:#C10D0C;
}
#about p {
	margin:1em 0;
}
.links {
	margin:1em 0;
}
#about div.mostactive {
	display:inline;
	margin:0 1px;
}
.links ul {
	list-style:none;
}
.links li {
	padding:0 5px;
	display:inline;
}
#archives {
	padding:0 10px;
	line-height:150%;
}
#archives ul,#archives li {
	list-style:none;
}
#archives a {
	color:#333;
}
#archives a:hover {
	color:#C10D0C;
}
ul.al_post_list {
	margin-left:50px;
	padding-left:5px;
	border-left:1px solid #CCC;
}
.archli {
	margin:10px 0;
	padding:5px;
	background:#F5F8FA;
	border:1px solid #DDD;
}
.archive-title {
	margin-bottom:10px;
}
h3.al_year {
	font-size:20px;
	padding:10px 5px;
	border-left:3px solid #FF0000;
}
.al_mon_list {
	border-left:1px solid #CCC;
}
.al_mon {
	display:block;
	padding-left:5px;
	border-bottom:1px solid #ccc;
}
/* 独立页面结束 */